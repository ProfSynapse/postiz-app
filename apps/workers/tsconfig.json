{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@postiz/shared/*": ["../shared/libraries/*"],
      "@postiz/workers/*": ["src/*"]
    },
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
